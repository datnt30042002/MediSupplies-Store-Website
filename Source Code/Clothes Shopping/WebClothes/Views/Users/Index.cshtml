@model ProfileModel

@{
    ViewData["Title"] = "User Manager";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    @*<title>Clothing Online Shop</title>*@
    <title>Doctris - Doctor Appointment Booking System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Premium Bootstrap 4 Landing Page Template" />
    <meta name="keywords" content="Appointment, Booking, System, Dashboard, Health" />
    <meta name="author" content="Shreethemes" />
    <meta name="email" content="support@shreethemes.in" />
    <meta name="website" content="https://shreethemes.in" />
    <meta name="Version" content="v1.2.0" />
    <!-- favicon -->
    <link rel="shortcut icon" href="/lib/images/favicon.ico.png">
    <!-- Bootstrap -->
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons -->
    
    <link href="/css/remixicon.css" rel="stylesheet" type="text/css" />
    <link href="https://unicons.iconscout.com/release/v3.0.6/css/line.css" rel="stylesheet">
    <!-- Css -->
    <link href="/css/style.min.css" rel="stylesheet" type="text/css" id="theme-opt" />

</head>

<body>
    <div class="page-wrapper doctris-theme">
        <!-- Start Page Content -->
        <main class="page-content bg-light">
            <div class="container-fluid">
                <div class="layout-specing">
                    <div class="d-md-flex justify-content-between">
                        <h5 class="mb-0">User MANAGER</h5>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive rounded">
                                <table class="table table-center bg-white mb-0">
                                    <thead>
                                        <tr>
                                            <th class="border-bottom p-3 col-auto">Full Name</th>
                                            <th class="border-bottom p-3 col-auto">Phone Number</th>
                                            <th class="border-bottom p-3 col-auto">Email</th>
                                            <th class="border-bottom p-3 col-auto">Address</th>
                                            <th class="border-bottom p-3 col-auto">Role</th>
                                            <th class="border-bottom p-3 col-auto">Function</th>

                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model.Users)
                                        {
                                            <tr>
                                                <td class="p-3 col-auto">@Html.DisplayFor(modelItem => item.FullName)</td>
                                                <td class="p-3 col-auto">@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                                <td class="p-3 col-auto">@Html.DisplayFor(modelItem => item.Email)</td>
                                                <td class="p-3 col-auto">@Html.DisplayFor(modelItem => item.Address)</td>
                                                <td class="p-3 col-auto">
                                                    @if (item.Role == 1)
                                                    {
                                                        <text>Admin</text>
                                                    }
                                                    else if (item.Role == 2)
                                                    {
                                                        <text>User</text>
                                                    }
                                                    else
                                                    {
                                                        @item.Role
                                                    }
                                                </td>
                                                <td class="p-3 col-auto">
                                                        <form asp-action="ChangeStatus" asp-route-userId="@item.UserId" method="post" class="change-status-form">
            <button type="submit" class="btn btn-icon btn-pills @(item.Status.HasValue ? (item.Status.Value ? "btn-soft-danger" : "btn-soft-primary") : "btn-soft-secondary") change-status-button">
                                                            @if (item.Status.HasValue)
                                                            {
                                                                if (item.Status.Value)
                                                                {
                                        <i class="uil uil-ban"></i>
                                                                }
                                                                else
                                                                {
                                        <i class="uil uil-check-circle"></i>
                                                                }
                                                            }
                                                            else
                                                            {
                            <i class="uil uil-question-circle"></i>
                                                            }
            </button>
        </form>                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <div class="col-12 mt-4">
                                    <div class="d-md-flex align-items-center text-center justify-content-between">
                                        <nav aria-label="Page navigation">
                                            <ul class="pagination justify-content-center mb-0 mt-3 mt-sm-0">
                                                @if (Model.TotalPages > 1)
                                                {
                                                // Hiển thị nút "Prev" (Trang trước đó)
                                                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1 })" aria-label="Previous">Prev</a>
                                                    </li>

                                                    // Hiển thị các trang
                                                    @for (int i = 1; i <= Model.TotalPages; i++)
                                                    {
                                                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                                            <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
                                                        </li>
                                                    }

                // Hiển thị nút "Next" (Trang tiếp theo)
                                                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                                        <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1 })" aria-label="Next">Next</a>
                                                    </li>
                                                }
                                            </ul>
                                        </nav>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div><!--end container-->
        </main>
        <!--End page-content" -->
    </div>
    <!-- page-wrapper -->
    <!-- javascript -->
    <script src="../../libs/simplebar/simplebar.min.js"></script>
    <script src="../../libs/feather-icons/feather.min.js"></script>
    <!-- Main Js -->
    <!-- JAVASCRIPT -->
    <script src="../../libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="../../js/plugins.init.js"></script>
    <script src="../../js/app.js"></script>

    <script src="../../js/bootstrap.bundle.min.js"></script>
    <!-- Icons -->
    <script src="../../js/feather.min.js"></script>
    <!-- Main Js -->
    <script src="../../js/app.js"></script>

     <script src="../js/bootstrap.bundle.min.js"></script>
    <!-- Icons -->
    <script src="../js/feather.min.js"></script>
    <!-- Main Js -->
    <script src="../js/app.js"></script>
 
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.all.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const changeStatusForm = document.querySelector(".change-status-form");
            const changeStatusButton = changeStatusForm.querySelector(".change-status-button");

            changeStatusForm.addEventListener("submit", function (event) {
                event.preventDefault(); // Prevent the form from submitting immediately

                Swal.fire({
                    title: "Xác nhận",
                    text: "Bạn có chắc chắn muốn thực hiện hành động này?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Đồng ý",
                    cancelButtonText: "Hủy bỏ"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // If user clicked "Đồng ý", submit the form programmatically
                        changeStatusForm.submit();
                    }
                });
            });
        });
    </script>

</body>


